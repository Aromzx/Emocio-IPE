<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentAlumnoAula.cursosAlumnoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">


            <Button
                android:id="@+id/curso1"
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:text="curso 1"
                app:cornerRadius="23dp"
                app:layout_constraintVertical_bias="0.05"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/curso2"
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:text="curso 2"
                app:cornerRadius="23dp"
                app:layout_constraintVertical_bias="0.35"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/curso3"
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:text="curso 3"
                app:cornerRadius="23dp"
                app:layout_constraintVertical_bias="0.55"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/curso4"
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:text="curso 4"
                app:cornerRadius="23dp"
                app:layout_constraintVertical_bias="0.80"
                />


        </LinearLayout>
    </ScrollView>



</LinearLayout>